{
  "name": "amazon-reviews-scrapper",
  "version": "1.0.0",
  "description": "\"Amazon Reviews Scraper\" is a Node.js project designed to extract and analyze reviews from Amazon product listings.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:lib && npm run build:bin",
    "build:lib": "NODE_ENV=production vite build",
    "build:bin": "pkg --debug -t node16-macos --public-packages='node_modules/puppeteer-extra-plugin-stealth,puppeteer-extra-plugin-stealth/evasions/chrome.app,node_modules/puppeteer-core/' ./bin/ars.js ",
    "start": "npx ts-node src/index.ts https://www.amazon.de/-/en/BATTOOL-8000mAh-BL1860B-Replacement-194205-3/dp/B0CXSGX5ND"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imravichhetri/amazon-reviews-scrapper.git"
  },
  "keywords": [
    "Amazon",
    "Reviews",
    "Scraper",
    "Web",
    "scraping",
